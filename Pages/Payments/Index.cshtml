@page
@model AuctionSystem.Pages.Payments.IndexModel
@using AuctionSystem.Models

@{
    ViewData["Title"] = "Payments";
}

<h2>Payments</h2>

<p>
    <a href="/Payments/Create" class="btn btn-primary">Create New Payment</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>User Id</th>
            <th>Amount</th>
            <th>Payment Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var payment in Model.Payments)
    {
        <tr>
            <td>@payment.UserId</td>
            <td>@payment.Amount</td>
            <td>@payment.PaymentDate</td>
            <td>
                <a href="/Payments/Edit/@payment.Id" class="btn btn-warning">Edit</a>
                <a href="/Payments/Delete/@payment.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
