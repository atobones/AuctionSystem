@model AuctionSystem.Models.AuctionItem

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delete Auction - AuctionSystem</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>
    <h2>Delete Auction</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>AuctionItem</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Title
            </dt>
            <dd class="col-sm-10">
                @Model.Title
            </dd>
            <dt class="col-sm-2">
                Description
            </dt>
            <dd class="col-sm-10">
                @Model.Description
            </dd>
            <dt class="col-sm-2">
                Starting Bid
            </dt>
            <dd class="col-sm-10">
                @Model.StartingBid
            </dd>
        </dl>
    </div>
    <form method="post" asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="/Auctions" class="btn btn-secondary">Back to List</a>
    </form>
</body>
</html>
